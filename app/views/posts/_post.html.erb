<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Posted by:</strong>
    <%= link_to "#{post.user.name}", users_profile_path(:user_id => post.user.id) %>
  </p>

  <p>
    <strong>Number of views:</strong>
    <%= post.views %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

</div>
