<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Posted by:</strong>
    <%= post.user.email %>
  </p>

  <p>
    <strong>Number of views:</strong>
    <%= post.views %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

</div>
