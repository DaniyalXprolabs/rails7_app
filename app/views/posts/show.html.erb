<div class="container">
  <%= render @post %>
  <div class="btn-group float-right">
    <% if user_signed_in? and current_user.id == @post.user.id %>
      <%= link_to "Edit this post", edit_post_path(@post), class: 'btn btn-secondary comment-btn' %>
      <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger comment-btn" %>
    <% end %>
    <%= link_to "Back to posts", posts_path, class: 'btn btn-primary comment-btn' %>
  </div>
  <%= render 'comments/comment', post: @post %>
</div>
