<%= render @post %>
<% if current_user.id == @post.user.id %>
  <div>
    <%= link_to "Edit this post", edit_post_path(@post) %>
    <%= button_to "Destroy this post", @post, method: :delete %>
  </div>
<% end %>
<%= link_to "Back to posts", posts_path %>
<div class="container">
  <h3>Add a comment</h3>
  <%= render 'comments/form', post: @post %>
</div>
